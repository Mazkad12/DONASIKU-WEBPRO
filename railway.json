{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "numConcurrentBuilds": 1,
        "watchPatterns": [
            "docker-compose.yml",
            "Dockerfile",
            "backend/**",
            "frontend/**"
        ]
    },
    "deploy": {
        "numConcurrentBuilds": 1,
        "startCommand": "docker-compose -f docker-compose.prod.yml up -d",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 5
    }
}